<filter name="twitter_api" module="planet" act="procPlanetTwitterApi" confirm_msg_code="confirm_submit">
  <form>
    <node target="twitter_uid" required="true" minlength="1" maxlength="40" />
    <node target="twitter_authkey" required="true" minlength="1" maxlength="40" />
    <node target="twitter_autopush" />
  </form>
  <parameter />
  <response callback_func="completeTwitterApi">
    <tag name="error" />
    <tag name="message" />
  </response>
</filter>
