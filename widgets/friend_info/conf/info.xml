  <extra_vars>
    <var name="friends_google_map_api_key">
      <type>text</type>
      <title xml:lang="ko">Google Maps API Key</title>
      <title xml:lang="en">Google Maps API Key</title>
      <description xml:lang="ko">http://code.google.com/apis/maps/signup.html 에서 Google Maps API Key를 발급 받으신 후 입력해주세요.</description>
      <description xml:lang="en">Please get Google Maps API Key from <a href="http://code.google.com/apis/maps/signup.html">here</a> first and then input the key.</description>
    </var>
    <var name="friends_google_map_api_version">
      <type>select</type>
      <title xml:lang="ko">Google Maps API 버전</title>
      <title xml:lang="en">Google Maps API Version</title>
      <description xml:lang="ko">v2 혹은 v3</description>
      <description xml:lang="en">v2 or v3</description>
    </var>
    <var name="friends_map_height">
      <type>text</type>
      <title xml:lang="ko">지도 높이</title>
      <title xml:lang="en">Map height</title>
      <description xml:lang="ko">숫자로만 입력. ex) 400</description>
      <description xml:lang="en">Number Only. ex) -0.1262362</description>
    </var>
